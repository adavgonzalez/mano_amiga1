<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F8FF"
    tools:context=".Registro_Cliente">

    <EditText
        android:id="@+id/telefonocliente_txt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="160dp"
        android:ems="10"
        android:hint="Telefono:"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nombrecliente_txt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Nombre:"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/apellidocliente_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo" />

    <EditText
        android:id="@+id/contraseñacliente_txt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="70dp"
        android:ems="10"
        android:hint="Contraseña:"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/telefonocliente_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/correocliente_txt" />

    <TextView
        android:id="@+id/titulo_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:breakStrategy="balanced"
        android:fontFamily="sans-serif-black"
        android:text="REGISTRO CLIENTE"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/volver"
        app:layout_constraintStart_toEndOf="@+id/volver" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="143dp"
        app:layout_constraintBottom_toBottomOf="@+id/apellidocliente_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mano_amiga" />

    <ImageButton
        android:id="@+id/volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F1F8FF"
        android:contentDescription="Descripción de la imagen o función del botón"
        android:onClick="volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert"
        app:tint="#000000" />

    <EditText
        android:id="@+id/correocliente_txt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="93dp"
        android:ems="10"
        android:hint="Correo:"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/telefonocliente_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombrecliente_txt" />

    <EditText
        android:id="@+id/apellidocliente_txt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:hint="Apellido:"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registrocliente_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:onClick="register_client"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>