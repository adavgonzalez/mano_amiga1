<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuPv">

    <TextView
        android:id="@+id/titulo_tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="20dp"
        android:breakStrategy="balanced"
        android:fontFamily="sans-serif-black"
        android:text="MANO AMIGA"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="258dp"
        android:layout_height="78dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_tv7"
        app:srcCompat="@drawable/mano_amiga" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="371dp"
        android:layout_height="481dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/solicitud_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:backgroundTint="#55BEB2"
                android:contentDescription="Hola"
                android:onClick="busqueda"
                android:scaleType="centerInside"
                android:src="@drawable/solicitudes" />

            <ImageButton
                android:id="@+id/mensajes_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:backgroundTint="#55BEB2"
                android:contentDescription="Hola"
                android:onClick="escribir"
                android:scaleType="centerInside"
                android:src="@drawable/mensajes" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:backgroundTint="#55BEB2"
                android:contentDescription="Hola"
                android:onClick="nosotros"
                android:scaleType="centerInside"
                android:src="@drawable/nosotros" />

            <ImageButton
                android:id="@+id/ajustes_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:backgroundTint="#55BEB2"
                android:contentDescription="Hola"
                android:onClick="settings"
                android:scaleType="centerInside"
                android:src="@drawable/ajustes" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>